<div class="row">
  <aside class="col-md-3 d-none d-lg-block">
    <%= link_to user_path(current_user) do %>
      <% if current_user.image.file.nil? %>
        <img src="user-pict.png" width="100" height="100" class="profile-image">
      <% else %>
        <img src=<%= current_user.image %> width="100" height="100" class="profile-image">
      <% end %>
      <h3 class="mt-2 profile-username"><%= current_user.name %></h3>
    <% end %>
    <p class="mt-2"><%= simple_format(current_user.profile) %></p>
    <%= link_to 'プロフィールを変更する', edit_user_path(current_user), class: "btn btn-primary mt-2" %>
  </aside>
  <div class="timeline col-sm-12 offset-lg-3 col-lg-7">
    <% posts.each do |post| %>
      
        <div class="card">
          <div class="card-body">
            <div class="post">
              <div class="post-left">
                <%= link_to user_path(post.user) do %>
                  <% if post.user.image.file.nil? %>
                    <img src="user-pict.png" width="50" height="50" class="timeline-profile-image">
                  <% else %>
                    <img src=<%= post.user.image %> width="50" height="50" class="timeline-profile-image">
                  <% end %>
                <% end %>
              </div>
              <div class="post-right ml-2">
                <p class="username"><%= link_to post.user.name, user_path(post.user), class: "link", :style=>"color:black;" %></p>
                <p class="content"><%= link_to simple_format(post.content), post_path(post), data: {"turbolinks" => false}, :style=>"color:black;", class: "link" %></p>
                <p class="created_at"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
              </div>
            </div>
            <div class="emotion ml-5">
              <% if post.joy? %>
                <%= image_tag 'joy.png', size: "25x25", class: "mr-5" %>
              <% else %>
                <%= image_tag 'TrMNZcqite9ERPy1574251959_1574252009.png', size: "25x25", class: "mr-5" %>
              <% end %>
              
              <% if post.angry? %>
                <%= image_tag 'angry.png', size: "25x25", class: "mr-5" %>
              <% else %>
                <%= image_tag 'b69imeB0ifKLEYj1574252373_1574252384.png', size: "25x25", class: "mr-5" %>
              <% end %>
              
              <% if post.sad? %>
                <%= image_tag 'sad.png', size: "25x25", class: "mr-5" %>
              <% else %>
                <%= image_tag '97UGwqcW1pYLGvY1574252540_1574252550.png', size: "25x25", class: "mr-5" %>
              <% end %>
              
              <% if post.happy? %>
                <%= image_tag 'happy.png', size: "25x25", class: "mr-5" %>
              <% else %>
                <%= image_tag 'xDwa9RHTN6U7VXT1574252642_1574252647.png', size: "25x25", class: "mr-5" %>
              <% end %>
              
              <!-- <%= link_to "投稿を削除する", post, method: :delete, data: { confirm: "本当に削除してもよいですか?" }, class: 'btn btn-danger btn-sm' %> -->
            </div>
          </div>
        </div>
      
    <% end %>
  </div>
</div>