<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <a class="navbar-brand" href="/">キドアイラク</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if logged_in? %>
          <form class="form-inline mt-2 mt-md-0 mr-2">
            <input class="form-control mr-sm-2" type="text" placeholder="キーワード検索" aria-label="Search">
            <button class="btn btn-success my-2 my-sm-0 mr-2" type="submit"><i class="fas fa-search"></i></button>
          </form>
          <li class="nav-item mr-2">
            <%= link_to new_post_path(current_user), class: 'nav-link mr-2' do %>
              <i class="fas fa-edit"></i>
            <% end %>
          </li>
          <li class="nav-item mr-2">
            <%= link_to user_path(current_user), class: 'nav-link mr-2' do %>
              <i class="fas fa-user"></i>
            <% end %>
          </li>
          <li class="nav-item mr-2"><a href="#" class="nav-link"><i class="fas fa-bell"></i></a></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>