<div class="container">  
  <div class="row">
    <%= render 'users/profile', user: @user %>
    
    
    <div class="center-field col-lg-7">
      <ul class="nav nav-tabs nav-justified mb-3">
        <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">投稿  <span class="badge badge-secondary"><%= @count_posts %></span></a></li>
        <li class="nav-item"><a href="<%= joy_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(joy_user_path(@user)) %>">よろこび  <span class="badge badge-secondary"></span></a></li>
        <li class="nav-item"><a href="<%= angry_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(angry_user_path(@user)) %>">いかり  <span class="badge badge-secondary"></span></a></li>
        <li class="nav-item"><a href="<%= sad_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(sad_user_path(@user)) %>">かなしい  <span class="badge badge-secondary"></span></a></li>
        <li class="nav-item"><a href="<%= happy_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(happy_user_path(@user)) %>">たのしい  <span class="badge badge-secondary"></span></a></li>
      </ul>
      <% @posts.each do |post| %>
      
        <div class="card">
          <div class="card-body">
            <div class="post">
              <div class="post-left">
                <%= link_to user_path(post.user) do %>
                  <img src=<%= post.user.image %> width="50" height="50" class="timeline-profile-image">
                <% end %>
              </div>
              
              <div class="post-right ml-2">
                <p class="username"><%= link_to post.user.name, user_path(post.user), class: "link", :style=>"color:black;" %></p>
                <p class="content"><%= link_to simple_format(post.content), post_path(post), :style=>"color:black;", class: "link" %></p>
                <p class="created_at"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
              </div>
            </div>
            <div class="emotion ml-5">
              <% if post.joy? %>
                <%= image_tag 'joy.png', size: "25x25", class: "mr-5" %>
              <% else %>
                <%= image_tag 'TrMNZcqite9ERPy1574251959_1574252009.png', size: "25x25", class: "mr-5" %>
              <% end %>
              
              <% if post.angry? %>
                <%= image_tag 'angry.png', size: "25x25", class: "mr-5" %>
              <% else %>
                <%= image_tag 'b69imeB0ifKLEYj1574252373_1574252384.png', size: "25x25", class: "mr-5" %>
              <% end %>
              
              <% if post.sad? %>
                <%= image_tag 'sad.png', size: "25x25", class: "mr-5" %>
              <% else %>
                <%= image_tag '97UGwqcW1pYLGvY1574252540_1574252550.png', size: "25x25", class: "mr-5" %>
              <% end %>
              
              <% if post.happy? %>
                <%= image_tag 'happy.png', size: "25x25", class: "mr-5" %>
              <% else %>
                <%= image_tag 'xDwa9RHTN6U7VXT1574252642_1574252647.png', size: "25x25", class: "mr-5" %>
              <% end %>
              
              
              <!-- <%= link_to "投稿を削除する", post, method: :delete, data: { confirm: "本当に削除してもよいですか?" }, class: 'btn btn-danger btn-sm' %> -->
            </div>
          </div>
        </div>
      
    <% end %>
    </div>
    <div class="right-bar d-none d-lg-block col-lg-2">
      <%= column_chart @chart, width: '250px',height: '250px' %>
    </div>
  </div>  
</div>